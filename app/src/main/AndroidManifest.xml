<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andre.nfltipapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/football_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ActionBar">
        <activity
            android:name=".loginregistryview.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main_fragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tabview.fragments.StatisticForGameActivity"
            android:screenOrientation="portrait"
            android:label=""
            android:theme="@style/AppTheme.ActionBar"/>
    </application>

</manifest>