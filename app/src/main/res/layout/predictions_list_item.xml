<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/away_team_logo_background"
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/icon_away_team"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="15dp">

                <CheckBox
                    android:id="@+id/away_team_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:buttonTint="@android:color/white"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_team_logo_background"
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="15dp">

                <CheckBox
                    android:id="@+id/home_team_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="true"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:buttonTint="@android:color/white"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/icon_home_team"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitStart"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/disable_overlay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>