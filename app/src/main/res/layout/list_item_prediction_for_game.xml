<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_prediction_game_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:textSize="19sp"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:id="@+id/linear_background_team_away"
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_away_team"
                android:layout_width="82dp"
                android:layout_height="55dp"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="15dp">

                <CheckBox
                    android:id="@+id/checkbox_away_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:buttonTint="@android:color/white"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_background_team_home"
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="15dp">

                <CheckBox
                    android:id="@+id/checkbox_home_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="true"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:buttonTint="@android:color/white"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/image_home_team"
                android:layout_width="82dp"
                android:layout_height="55dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_disable_overlay"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>