<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1b1b1b">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/dashboard_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/nfl_image"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/text_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f0f0f0"
                    android:textSize="26sp"/>

                <TextView
                    android:id="@+id/text_days_to_superbowl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f0f0f0"
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#b2b2b2"
                    android:textSize="18sp"
                    android:text="DEINE AKTUELLE PLATZIERUNG"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/button_go_to_ranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="30dp"
                        android:background="#3c3c3c"
                        android:gravity="center_horizontal|center_vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/traeppchen_neu"/>

                        <TextView
                            android:id="@+id/text_own_ranking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#b2b2b2"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="1dp">

                        <TextView
                            android:id="@+id/text_own_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:textColor="#b2b2b2"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/text_lead_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:textColor="#b2b2b2"
                            android:textSize="18sp"/>
                        <TextView
                            android:id="@+id/text_missing_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:textColor="#b2b2b2"
                            android:textSize="18sp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="#b2b2b2"
                        android:textSize="18sp"
                        android:text="OFFENE TIPPS"/>

                    <LinearLayout
                        android:id="@+id/background_predicted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#3c3c3c"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/image_predicted"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/fragezeichen"/>

                        <TextView
                            android:id="@+id/text_predicted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:textColor="#b2b2b2"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_go_to_prediction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textSize="9sp"
                        android:textColor="#f0f0f0"
                        android:background="#d50a0a"
                        android:text="Jetzt tippen >>"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>